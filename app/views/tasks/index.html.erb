<h1> Here are your tasks :<h1>

<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <%= link_to "Show", task_path(task)%>
  <%= link_to "Edit", edit_task_path(task)%>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>

<br>
<h1> Create a new Task here </h1>
<%= link_to "Create", new_task_path %>
